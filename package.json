{
  "name": "react-daisy-components",
  "version": "1.0.0",
  "author": "Boulteu",
  "description": "Beautiful and optimized React components styled with Tailwind CSS and DaisyUI.",
  "homepage": "https://boulteu.com/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boulteu/react-daisy-components.git"
  },
  "keywords": [
    "react",
    "react.js",
    "datatable",
    "multiselect",
    "tailwind",
    "daisyui",
    "component",
    "react-component",
    "typescript"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx --fix"
  },
  "peerDependencies": {
    "@types/react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "@types/react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "daisyui": "^5.0.50",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.5.0"
  }
}
